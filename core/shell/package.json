{
  "name": "ui-shell",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Application shell providing feedback, HTTP, and i18n services to plugin apps",
  "main": "dist/shell.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "start": "vite",
    "build": "npm run copy-shoelace && tsc && vite build",
    "build:de": "npm run copy-shoelace && tsc && vite build --config vite.config.de.js",
    "build:all": "npm run build && npm run build:de",
    "build:types": "tsc src/types/public-api.ts --declaration --emitDeclarationOnly --outDir ../contracts/dist --skipLibCheck",
    "postbuild": "npm run build:types",
    "copy-shoelace": "mkdir -p public/shoelace && cp -r node_modules/@shoelace-style/shoelace/cdn/* public/shoelace/",
    "preview": "vite preview",
    "test": "vitest",
    "i18n:extract": "node ../../tools/i18n-plugin/extract.js",
    "i18n:validate": "node ../../tools/i18n-plugin/validate.js"
  },
  "dependencies": {
    "@cfkit/vite-i18n-plugin": "file:../../tools/vite-i18n-plugin",
    "@shoelace-style/shoelace": "^2.20.1",
    "ky": "^1.14.2"
  },
  "devDependencies": {
    "jsdom": "^27.4.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  }
}
