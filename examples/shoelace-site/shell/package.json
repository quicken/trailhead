{
  "name": "trailhead-shoelace-example",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "description": "Example Trailhead shell with Shoelace design system",
  "scripts": {
    "start": "vite",
    "build": "npm run copy-shoelace && vite build",
    "copy-shoelace": "mkdir -p public/shoelace && cp -r node_modules/@shoelace-style/shoelace/cdn/* public/shoelace/",
    "preview": "vite preview"
  },
  "dependencies": {
    "@herdingbits/trailhead-core": "^0.0.4",
    "@herdingbits/trailhead-shoelace": "^0.0.4",
    "@shoelace-style/shoelace": "^2.20.1"
  },
  "devDependencies": {
    "@herdingbits/trailhead-types": "^0.0.5",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  }
}
